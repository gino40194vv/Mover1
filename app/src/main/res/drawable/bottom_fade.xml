<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sfumatura principale verticale -->
    <item>
        <shape>
            <gradient
                android:startColor="#00E6E6E6"
                android:endColor="#E6E6E6"
                android:angle="270"/>
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"/>
        </shape>
    </item>

    <!-- Sfumatura per gli angoli -->
    <item>
        <shape>
            <gradient
                android:startColor="#00578374"
                android:endColor="#33A27E62"
                android:angle="270"/>
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"/>
        </shape>
    </item>
</layer-list>